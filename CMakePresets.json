{
    "version": 4,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Default debug configuration",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "GLYNTH_HOT_SHADER_RELOAD": false,
                "GLYNTH_LOG_TO_FILE": false
            }
        },
        {
            "name": "debug-hsr",
            "displayName": "Debug (HSR)",
            "description": "Debug configuration with hot shader reloading",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "GLYNTH_HOT_SHADER_RELOAD": true,
                "GLYNTH_LOG_TO_FILE": false
            }
        },
        {
            "name": "debug-logic",
            "displayName": "Debug (Logic)",
            "description": "Debug configuration that logs to a file instead of stdout",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "GLYNTH_HOT_SHADER_RELOAD": true,
                "GLYNTH_LOG_TO_FILE": true
            }
        }
    ]
}
